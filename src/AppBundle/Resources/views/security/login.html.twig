{% extends 'AppBundle::base.html.twig' %}
{% block title %}Login{% endblock %}
{% block bodyClass %}page-login{% endblock %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="login-page">
<div class="mdl-grid login-panel">
    <div class="mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col intro">
        <header class="login-logo">
            <div class="logo-area">
                <img src="/static/img/logo.png" />
            </div>
        </header>
    <div class="demo-graphs">
    <h1>Login</h1>


    {% if loginErrorMessage %}
        <div class="alert alert--danger">{{ loginErrorMessage }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="email" id="email" name="_username" value="{{ lastEmail }}" required />
            <label class="mdl-textfield__label" for="email">Email address</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
            <input class="mdl-textfield__input" type="password" id="password" name="_password" required />
            <label class="mdl-textfield__label" for="password">Password</label>
        </div>

        <div>
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" type="submit">
                Login
            </button>
            <a href="{{ path('lost_password') }}" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-button--colored">
                Lost password?
            </a>
        </div>
    </form>
    </div>
</div>
</div>
{% endblock %}